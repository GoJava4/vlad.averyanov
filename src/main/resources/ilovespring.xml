<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd 
						http://www.springframework.org/schema/context 
						http://www.springframework.org/schema/context/spring-context.xsd">
	<context:annotation-config />

	<!-- Initialization for data source -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="maxActive" value="10"/>
		<property name="maxWait" value="10"/>
		<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
		<property name="url" value="jdbc:mysql://tortik.asuscomm.com/vlad_averyanov"/>
		<property name="username" value="vlad_averyanov"/>
		<property name="password" value="vlad_averyanov"/>
	</bean>
	<!--DAO's & Services-->
	<!--Quotes-->
	<bean id="quoteJDBCTemplate" class="kickstarter.model.dao.templates.QuoteJDBCTemplate">
		<property name="dataSource"  ref="dataSource"/>
	</bean>
	<bean id="quoteService" class="kickstarter.model.services.QuoteService">
		<constructor-arg ref="quoteJDBCTemplate"/>
	</bean>
	<!--Categories-->
	<bean id="categoryJDBCTemplate" class="kickstarter.model.dao.templates.CategoryJDBCTemplate">
		<property name="dataSource"  ref="dataSource"/>
	</bean>
	<bean id="categoryService" class="kickstarter.model.services.CategoryService">
	<constructor-arg ref="categoryJDBCTemplate"/>
	</bean>
	<!--Projects-->
	<bean id="projectJDBCTemplate" class="kickstarter.model.dao.templates.ProjectJDBCTemplate">
		<property name="dataSource"  ref="dataSource"/>
	</bean>
	<bean id="projectService" class="kickstarter.model.services.ProjectService">
		<constructor-arg ref="projectJDBCTemplate"/>
	</bean>

</beans>
